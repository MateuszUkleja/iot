{
  "name": "cdv-iot-api",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "scripts": {
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm install && npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "db:seed": "npx ts-node prisma/seed.ts",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:refresh": "npx prisma migrate reset && npx prisma migrate dev && npx ts-node prisma/seed.ts",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build -d",
    "docker:db:refresh": "docker compose -f docker-compose.dev.yml run --rm app npm run db:refresh",
    "docker:stop": "docker compose -f docker-compose.dev.yml down",
    "docker:studio": "docker compose -f docker-compose.dev.yml exec app npx prisma studio --hostname 0.0.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.2",
    "@fastify/sensible": "^6.0.0",
    "@fastify/static": "^8.0.3",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@fastify/websocket": "^11.0.2",
    "@prisma/client": "^6.2.1",
    "@scalar/fastify-api-reference": "^1.25.113",
    "bcrypt": "^5.1.1",
    "fastify": "^5.2.0",
    "fastify-axios": "^1.2.10",
    "fastify-bcrypt": "^1.0.1",
    "fastify-cli": "^7.1.0",
    "fastify-plugin": "^5.0.0",
    "fastify-type-provider-zod": "^4.0.2",
    "sanitize-html": "^2.14.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "@types/sanitize-html": "^2.13.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fastify-tsconfig": "^2.0.0",
    "globals": "^15.13.0",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "ts-node": "^10.4.0",
    "tsx": "^4.19.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.18.0"
  }
}
